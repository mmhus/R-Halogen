#####################################################################
## Modulefile to load QEMU 8.2.1 version
#####################################################################
proc ModulesHelp { } {
    global version
    puts stderr "This module loads QEMU 8.2.1 for virtualization and emulation."
}

module-whatis "Loads QEMU 8.2.1 for virtualization and emulation."

# Define the version
set qemu_version "8.2.1"

# Define the installation directory
set qemu_dir "/opt/qemu-riscv64"

# Update PATH environment variable
prepend-path PATH "$qemu_dir/bin"

# Notify the user
if { [module-info mode unload] } {
    puts stderr "Unloaded QEMU $qemu_version for virtualization and emulation."
} else {
    puts stderr "Loaded QEMU $qemu_version for virtualization and emulation."
}

